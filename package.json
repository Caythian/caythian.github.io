{
  "name": "xuecong.art",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "vite --filter \"@xuecong.art/frontend\"",
    "dev:backend": "bun run --hot apps/backend/src/index.ts",
    "dev": "bun run --filter \"@xuecong.art/*\" dev",
    "build": "bun run --filter \"@xuecong.art/frontend\" build",
    "preview": "bun run --filter \"@xuecong.art/frontend\" preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "deploy": "bun run build && bun run --filter \"@xuecong.art/backend\" deploy"
  },
  "dependencies": {
    "@silk-hq/components": "^0.9.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "react-swipeable": "^7.0.2",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.3"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@cloudflare/workers-types": "^4.20250628.0",
    "@types/bun": "^1.2.17",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.5.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jiti": "^2.4.2",
    "vite": "^6.3.5",
    "wrangler": "^3.67.0"
  }
}
